{
  "manifest_version": 2,

  "name": "Filter My Link",
  "description": "Filters certain words and replaces them with random quotes, words or emojis.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"

  },

  "permissions": [
    "activeTab"
  ],


  "content_scripts": [
      {
          "matches": [
              "<all_urls>"
          ],
          "js": [
              "content.js"
          ],
          "run_at": "document_end"
      }
  ]
}
